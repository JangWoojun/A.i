<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woojun.ai.LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="bottom"
        android:background="#4894fe"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="24dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/poppins_reqular"
            android:text="Email"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/poppins_reqular"
                android:id="@+id/email_area"
                android:background="@drawable/text_input_box"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:fontFamily="@font/poppins_reqular"
            android:layout_marginTop="24dp"
            android:text="Password"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            app:endIconMode="password_toggle"
            app:endIconDrawable="@drawable/password_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/text_input_box"
                android:fontFamily="@font/poppins_reqular"
                android:id="@+id/password_area"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/poppins_reqular"
            android:id="@+id/forgot_password"
            android:text="비밀번호를 잊으셨나요?"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/login_button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center"
        android:backgroundTint="#4894fe"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:text="로그인"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/poppins_reqular"
            android:text="계정을 가지고 있지 않으신가요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/move_sign_in_button"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/move_sign_in_text"
                android:layout_marginStart="5dp"
                android:textColor="#4894fe"
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/login_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/google_login_button"
            android:layout_marginEnd="12.5dp"
            android:src="@drawable/google_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"/>

        <ImageView
            android:id="@+id/apple_login_button"
            android:layout_marginStart="12.5dp"
            android:src="@drawable/apple_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"/>

    </LinearLayout>

</LinearLayout>