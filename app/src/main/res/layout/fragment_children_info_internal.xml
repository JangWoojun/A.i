<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6f5"
    tools:context=".fragment.main.ChildrenInfoInternalFragment">


    <LinearLayout
        android:background="#f4f6f5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/rounded_bottom_corner_background"
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="120dp"
                android:layout_height="145dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="52dp"
                android:outlineProvider="none"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="52dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="김옥순"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="여성"
                    android:textColor="#a7a6a5"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/chat_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/chat_icon"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

            <ImageView
                android:layout_marginStart="18dp"
                android:id="@+id/phone_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone_icon"
                app:layout_constraintStart_toEndOf="@+id/chat_button"
                app:layout_constraintTop_toTopOf="@+id/chat_button" />

            <TextView
                android:id="@+id/location_short"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="서울"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#a7a6a5"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="현재 나이"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:outlineProvider="none"
                    android:backgroundTint="#eff2f1"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="120dp"
                    android:layout_height="58dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/age2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="82세"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:layout_width="114dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#a7a6a5"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="실종 나이"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:outlineProvider="none"
                    android:backgroundTint="#eff2f1"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="120dp"
                    android:layout_height="58dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/age1"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="78세"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="114dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#a7a6a5"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="발생 일시"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:outlineProvider="none"
                    android:backgroundTint="#eff2f1"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="120dp"
                    android:layout_height="58dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/date"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="82. 01. 30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginStart="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="기타 정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:outlineProvider="none"
                    app:cardCornerRadius="10dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/type"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="지적장애인"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="center"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#a7a6a5"
                            android:textSize="16sp"
                            android:text="분류"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="15dp"
                    android:outlineProvider="none"
                    app:cardCornerRadius="10dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="가죽옷차림"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/dress"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#a7a6a5"
                            android:textSize="16sp"
                            android:text="복장"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="특징"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/characteristics"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="#a7a6a5"
                android:text="해당 실종아동은 다리에 큰 상처가 있음"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="실종 위치"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="#a7a6a5" />

                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="10dp"
                    android:textColor="#a7a6a5"
                    android:text="서울 특별시 강서구 강서로 33길"
                    android:textSize="16sp"
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="26dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</ScrollView>